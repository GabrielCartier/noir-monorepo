{
  "name": "noir-monorepo",
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["biome format --write", "biome lint --write"],
    "*.{json,md}": ["biome format --write"]
  },
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "bun run --cwd frontend dev",
    "build": "bun run --cwd frontend build",
    "backend:dev": "bun run --cwd backend dev",
    "prepare": "husky",
    "lint": "biome check .",
    "format": "biome format . --write",
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "engines": {
    "node": ">=22"
  }
}
