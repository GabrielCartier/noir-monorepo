{
  "name": "contracts",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "compile": "forge build",
    "coverage": "forge coverage --match-path ./test/**/*.t.sol --report lcov",
    "coverage:summary": "forge coverage --match-path ./test/**/*.t.sol --report summary --ir-minimum --summary --detailed",
    "pretty": "forge fmt",
    "snapshot": "forge snapshot; cat .gas-snapshot",
    "test": "forge test --match-path ./test/**/*.t.sol -vvv",
    "test:contract": "forge test -vvv --match-contract",
    "test:verbose": "forge test --match-path ./test/**/*.t.sol -vvvvv",
    "test:gas-report": "forge test --gas-report"
  },
  "devDependencies": {
    "npm-check-updates": "17.1.3",
    "prettier": "3.3.3",
    "prettier-plugin-solidity": "1.4.1",
    "solhint": "5.0.3",
    "solhint-plugin-prettier": "0.1.0"
  },
  "dependencies": {}
}
